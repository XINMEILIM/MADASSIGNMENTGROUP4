<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0E1"
    tools:context=".DailyWellnessModule.DailyWellnessMain">

    <TextView
        android:id="@+id/TrackerTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Wellness Tracker"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView (Background Image) -->

    <ImageView
        android:id="@+id/tracker_background"
        android:layout_width="328dp"
        android:layout_height="592dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TrackerTittle"
        app:layout_constraintVertical_bias="0.37"
        app:srcCompat="@drawable/background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnHydrationTracker"
        android:layout_width="155dp"
        android:layout_height="43dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Get Started"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tracker_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnStepTracking"
        android:layout_width="155dp"
        android:layout_height="43dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="164dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Get Started"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/BtnHydrationTracker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BtnHydrationTracker"
        app:layout_constraintTop_toBottomOf="@+id/BtnHydrationTracker" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnBMICalculator"
        android:layout_width="155dp"
        android:layout_height="43dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="164dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Get Started"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/BtnStepTracking"
        app:layout_constraintTop_toBottomOf="@+id/BtnStepTracking" />



</androidx.constraintlayout.widget.ConstraintLayout>