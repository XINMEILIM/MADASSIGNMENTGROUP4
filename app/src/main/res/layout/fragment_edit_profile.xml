<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0E1"
    tools:context=".UserModule.EditProfileFragment">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="357dp"
        android:layout_height="304dp"
        android:src="@drawable/profiletable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/ETUserHeight"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="208dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="@string/height_cm"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFF0E1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <EditText
        android:id="@+id/ETUserWeight"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="@string/weight_kg"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFF0E1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/ETUserHeight" />

    <EditText
        android:id="@+id/ETUserGender"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="@string/gender"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFF0E1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ETUserHeight"
        app:layout_constraintTop_toBottomOf="@+id/ETUserWeight" />

    <EditText
        android:id="@+id/ETUserBirth"
        android:layout_width="131dp"
        android:layout_height="43dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="@string/year_of_birth"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFF0E1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ETUserHeight"
        app:layout_constraintTop_toBottomOf="@+id/ETUserWeight" />

    <Button
        android:id="@+id/BtnSave"
        android:layout_width="102dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#ffae43"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

</androidx.constraintlayout.widget.ConstraintLayout>